<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tutorial.android.apptutorial.DisplayMessageActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Click Photo or Choose a Picture"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/Photo_ImageView"
        android:layout_width="379dp"
        android:layout_height="379dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:onClick="selectPhoto"
        android:scaleType="fitXY"
        android:src="@drawable/focus_image"
        tools:clickable="true"
        tools:onClick="selectPhoto"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Click_Photo_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:onClick="clickPhoto"
            android:text="Click Photo"/>

        <Button
            android:id="@+id/Select_Photo_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:onClick="selectPhoto"
            android:text="Select Photo"/>

    </LinearLayout>


</LinearLayout>
